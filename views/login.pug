extends layout

include ../node_modules/pug-bootstrap/components/forms

append content
  h1=title
  if message
    h4(style='color:red') #{message}
  br
  form(method='POST', action='/user/auth', id='loginForm')
  .authForm
    #form-group
      input.form-control(name='username', type='text', form='loginForm', required, placeholder='Username..')
    br
    #form-group
      input.form-control(name='password', type='password', form='loginForm', required, placeholder='Password..')
  br
  input.btn.btn-info(type='submit', value='Log In', form='loginForm')
